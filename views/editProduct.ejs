<!DOCTYPE html>
<html lang="es">

<!--HEAD-->
<%- include('partials/head')  %>

    <body>
        <!--HEADER-->
        <%- include('partials/header')  %>
            <form action="/productDetail/<%= product.id %>" method="POST" class="cont-form" enctype="enctype=multipart/form-data">

                <div class="p-form">
                    <h1>Edita el producto</h1>
                    <div class="igroup">
                        <input type="text" name="name" id="product_name" value="<%= product.name %>"><span class="ibar"></span>
                        <label for="name">Nombre del producto</label>
                    </div>

                    <div class="igroup">
                        <input type="Text" name="price" value="<%= product.price %>" id="price" required><span class="ibar"></span>
                        <label for="price">Precio</label>
                    </div>

                    <div class="igroup">
                        <input type="file" name="image" value="<%= product.image%>" id="image"><span class="ibar"></span>
                        <label for="file">Imagen</label>

                    </div>

                    <div class="igroup">
                        <textarea cols="200" id="descriptionDetail" rows="2"> <%= product.description%></textarea><span class="ibar"></span>
                        <label for="description">Descripci√≥n</label>
                    </div>

                    <div class="igroup">
                        <label>Categoria</label>
                        <select class="f-select" name="category" id="category">
                <option value="" disabled> Selecciona una opcion</option>
              <option value="unico" <%- product.category === 'unico' ? 'selected' : '' %>>Unico</option>
				<option value="varios" <%- product.category === 'varios' ? 'selected' : '' %>>Varios</option>
            </select>
                    </div>

                    <button type="submit" class="button">Guardar producto</button>
                </div>
            </form>
            <!--FOOTER-->
            <%- include('partials/footer')  %>
    </body>

</html>